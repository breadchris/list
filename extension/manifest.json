{
  "manifest_version": 3,
  "name": "share",
  "version": "2.0",
  "description": "Simple browser extension for sharing pages and reloading the extension.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "management",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://localhost:8080/*",
    "https://zazsrepfnamdmibcyenx.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Share Extension"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}