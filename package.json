{
  "name": "list-app",
  "version": "1.0.0",
  "description": "A minimalist list app with Supabase backend",
  "main": "index.tsx",
  "type": "module",
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tailwindcss/cli": "^4.1.12",
    "@tanstack/react-query": "^5.0.0",
    "@types/prismjs": "^1.26.5",
    "lucide-react": "^0.544.0",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.1",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tanstack/react-query-devtools": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "dev": "go run . serve",
    "build": "npm run css:build && go run . build",
    "css:build": "npx @tailwindcss/cli -i ./input.css -o ./public/styles.css --minify",
    "css:watch": "npx @tailwindcss/cli -i ./input.css -o ./public/styles.css --watch",
    "css:dev": "npx @tailwindcss/cli -i ./input.css -o ./public/styles.css",
    "test:e2e": "NODE_ENV=test playwright test",
    "test:e2e:headed": "NODE_ENV=test playwright test --headed",
    "test:e2e:ui": "NODE_ENV=test playwright test --ui"
  }
}
